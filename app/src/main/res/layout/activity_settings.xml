<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_on_primary"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding4"
        android:paddingTop="@dimen/padding_10dp"
        android:paddingBottom="@dimen/padding_42dp">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center_vertical"
            android:paddingEnd="@dimen/padding12dp"
            android:src="@drawable/back_button_vector" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/ys_text_regular"
            android:paddingLeft="@dimen/_14dp"
            android:text="@string/Settings"
            android:textColor="@color/my_on_secondary"
            android:textSize="@dimen/text_size_22" />
    </androidx.appcompat.widget.Toolbar>


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/themeSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_text_light"
        android:iconTint="@color/my_on_secondary"
        android:paddingStart="@dimen/padding16"
        android:paddingTop="@dimen/padding_settings"
        android:paddingEnd="@dimen/padding16"
        android:paddingBottom="@dimen/padding_settings"
        android:text="@string/Dark_theme"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/text_size_settings"
        android:theme="@style/SwitchTheme" />

    <TextView
        android:id="@+id/share_the_app"
        style="@style/TextViewSettings"
        android:drawableEnd="@drawable/share_button"
        android:text="@string/Share_the_app" />


    <TextView
        android:id="@+id/write_to_the_support"
        style="@style/TextViewSettings"
        android:drawableEnd="@drawable/support_logo"
        android:text="@string/write_to_the_support" />


    <TextView
        android:id="@+id/user_agreement"
        style="@style/TextViewSettings"
        android:drawableEnd="@drawable/user_agreement"
        android:text="@string/User_agreement" />

</LinearLayout>
