<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingStart="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="start|center_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/button_back"
                android:paddingTop="16dp"
                android:layout_height="match_parent"
                android:src="@drawable/back_button"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_gravity="start|center_vertical"/>


            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_22"
                android:paddingTop="14dp"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="@string/Settings"/>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Dark_theme"
            android:textColor="@color/black"
            android:paddingStart="@dimen/padding_settings"
            android:textSize="@dimen/text_size_settings"/>

        <Switch
            android:layout_width="wrap_content"
            android:id="@+id/switcher"
            android:layout_height="wrap_content"
            android:scrollbarSize="20dp"
            android:paddingEnd="18dp"
            android:layout_gravity="end"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Share_the_app"
            android:layout_gravity="start|center_vertical"
            android:textColor="@color/black"
            android:paddingStart="@dimen/padding_settings"
            android:textSize="@dimen/text_size_settings"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share_button"
            android:layout_gravity="end|center_vertical"
            android:paddingEnd="@dimen/padding_settings"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_to_the_support"
            android:layout_gravity="start|center_vertical"
            android:textColor="@color/black"
            android:paddingStart="@dimen/padding_settings"
            android:textSize="@dimen/text_size_settings"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/support_logo"
            android:layout_gravity="end|center_vertical"
            android:paddingEnd="@dimen/padding_settings"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/User_agreement"
            android:layout_gravity="start|center_vertical"
            android:textColor="@color/black"
            android:paddingStart="@dimen/padding_settings"
            android:textSize="@dimen/text_size_settings"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_agreement"
            android:layout_gravity="end|center_vertical"
            android:paddingEnd="@dimen/padding_settings"/>

    </FrameLayout>

</LinearLayout>