<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/paddind4"
        android:paddingStart="@dimen/paddind4">

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/button_back"
            android:layout_height="match_parent"
            android:src="@drawable/back_button"
            android:paddingStart="@dimen/padding12dp"
            android:paddingEnd="@dimen/padding12dp"
            android:layout_gravity="start|center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_22"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="@string/Settings"
            android:layout_gravity="center_vertical"/>
    </androidx.appcompat.widget.Toolbar>


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switcher"
        android:paddingStart="@dimen/padding16"
        android:paddingEnd="@dimen/padding16"
        android:text="@string/Dark_theme"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_settings"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding16"
        android:paddingTop="@dimen/padding12dp"
        android:paddingBottom="@dimen/padding12dp"
        android:paddingEnd="@dimen/padding16"
        android:text="@string/Share_the_app"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_settings"
        android:drawableEnd="@drawable/share_button"
        android:gravity="center_vertical" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding16"
        android:paddingEnd="@dimen/padding16"
        android:paddingTop="@dimen/padding12dp"
        android:paddingBottom="@dimen/padding12dp"
        android:text="@string/write_to_the_support"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_settings"
        android:drawableEnd="@drawable/support_logo"
        android:gravity="center_vertical" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding16"
        android:paddingTop="@dimen/padding12dp"
        android:paddingBottom="@dimen/padding12dp"
        android:paddingEnd="@dimen/padding16"
        android:text="@string/User_agreement"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_settings"
        android:drawableEnd="@drawable/user_agreement"
        android:gravity="center_vertical" />

</LinearLayout>
