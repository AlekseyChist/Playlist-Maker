<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonViewStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation">0dp</item>
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:layout_height">@dimen/weight</item>
        <item name="android:layout_marginTop">@dimen/padding24</item>
        <item name="android:layout_weight">1</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="cornerRadius">@dimen/padding16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="TextViewSettings">
        <item name="android:textColor">@color/my_on_secondary</item>
        <item name="fontFamily">@font/ys_text_light</item>
        <item name="android:textSize">@dimen/text_size_settings</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding16</item>
        <item name="android:paddingEnd">@dimen/padding16</item>
        <item name="android:paddingTop">@dimen/padding_settings</item>
        <item name="android:paddingBottom">@dimen/padding_settings</item>
        <item name="android:gravity">center_vertical</item>
        <item name="iconTint">@color/my_on_secondary</item>
    </style>

    <style name="SwitchTheme">
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/iconcolor</item>
    </style>

    <style name="MediatekaTitle">
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">3.78sp</item>
    </style>

    <style name="TabText">
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">2.41sp</item>
    </style>

    <style name="PlaceholderText">
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/clear_history_button_text</item>
        <item name="android:lineSpacingExtra">3.27sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">46dp</item>
    </style>

    <style name="NewPlaylistButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">133dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
        <item name="backgroundTint">@color/black</item>
    </style>



</resources>